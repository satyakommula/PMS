@using PMS.Areas.PMS.Models
@model PMS.tblCorrespondence
@{
    ViewBag.Title = "Correspondence";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listFilters = ViewBag.Filters as List<FilterEntity>;
    var listProjectCode = listFilters.Where(filter => filter.FilterType == "ProjectCode").ToList();
    var listDepartment = listFilters.Where(filter => filter.FilterType == "Department").ToList();
    var listType = listFilters.Where(filter => filter.FilterType == "ReceivedType").ToList();
}
<form id="CorrespondenceForm">
    <div class="form-group ">
        <input type="hidden" id="hdnId" value="@Model.Id">
        <input type="hidden" id="hdnCorrespondenceId" value="@Model.CorrespondenceId">
        <input type="hidden" id="hdnFilePath" value="@Model.FilePath">
        @if (Model.Id > 0)
        {
            <input type="hidden" id="hdnLetterDate" value="@(Model.LetterDate!=null?Model.LetterDate.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReferenceDate1" value="@(Model.ReferenceDate1!=null?Model.ReferenceDate1.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReferenceDate2" value="@(Model.ReferenceDate2!=null?Model.ReferenceDate2.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReferenceDate3" value="@(Model.ReferenceDate3!=null?Model.ReferenceDate3.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReceivedDate" value="@(Model.ReceivedDate!=null?Model.ReceivedDate.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReceivedDate1" value="@(Model.ReceivedDate1!=null?Model.ReceivedDate1.Value.ToString("yyyy-MM-dd"):"")">
            <input type="hidden" id="hdnReceivedDate2" value="@(Model.ReceivedDate2!=null?Model.ReceivedDate2.Value.ToString("yyyy-MM-dd"):"")">
        }
        <div class="row ml-4 mt-4">
            <div class="col-12">
                <div class="row form-group m-0">
                    <label class="col-form-label col-2 p-0" for="">Select</label>
                    <div class="col-3 p-0">
                        @Html.RadioButtonFor(model => model.CorrespondenceType, 1, new { id = "InWard", @class = "radio" }) Inward
                    </div>
                    <div class="col-6">
                        @Html.RadioButtonFor(model => model.CorrespondenceType, 2, new { id = "OutWard", @class = "radio" }) Outward
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-4">
            <div class="col-12">
                <div class="row form-group">
                    <label class="col-form-label col-2" for="ddlBranchCode">Project Code</label>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.ProjectCode, new { @class = "form-control", @required = true })
                    </div>
                    <div class="col-3">
                        <label class="col-form-label col-10" for="">Department</label>
                    </div>
                    <div class="col-3">
                        @Html.DropDownListFor(model => model.Department, new SelectList(listDepartment, "FilterCode", "FilterName", Model.Department), "Select Department", new { @class = "form-control", @required = true })
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group ml-4 mt-1">
            <label class="control-label col-2" for="txtProjectName">Project Name</label>
            <div class="col-9 float-left ">
                @Html.TextBoxFor(model => model.ProjectName, new { @class = "form-control maxw-100 float-left", @required = true })
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <label class="col-form-label col-10 mb-2 font-weight-bold" for="">Correspondence Information</label>
            <div class="col-12">
                <div class="row form-group ">
                    <div class="col-2">
                        <label class="col-form-label">From</label>
                    </div>
                    <div class="col-9" id="">
                        <div class="row">
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.FromName, new { @class = "form-control", @required = true, @placeholder = "Name" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.FromDesignation, new { @class = "form-control", @required = true, @placeholder = "Designation" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.FromOrganisation, new { @class = "form-control", @required = true, @placeholder = "Organisation" })
                            </div>
                        </div>
                    </div>
                    <div class="col-1 p-1">
                        @Html.TextBoxFor(model => model.FromAddress, new { @class = "form-control", @required = true, @placeholder = "Address" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <div class="col-2">
                        <label class="col-form-label">To</label>
                    </div>
                    <div class="col-9" id="">
                        <div class="row">
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.ToName, new { @class = "form-control", @required = true, @placeholder = "Name" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.ToDesignation, new { @class = "form-control", @required = true, @placeholder = "Designation" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.ToOrganisation, new { @class = "form-control", @required = true, @placeholder = "Organisation" })
                            </div>
                        </div>
                    </div>
                    <div class="col-1 p-1">
                        @Html.TextBoxFor(model => model.ToAddress, new { @class = "form-control", @required = true, @placeholder = "Address" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <div class="col-2">
                        <label class="col-form-label">CopyTo</label>
                    </div>
                    <div class="col-9" id="">
                        <div class="row">
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.CopyToName, new { @class = "form-control", @required = true, @placeholder = "Name" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.CopyToDesignation, new { @class = "form-control", @required = true, @placeholder = "Designation" })

                            </div>
                            <div class="col-4">
                                @Html.TextBoxFor(model => model.CopyToOrganisation, new { @class = "form-control", @required = true, @placeholder = "Organisation" })
                            </div>
                        </div>
                    </div>
                    <div class="col-1 p-1">
                        @Html.TextBoxFor(model => model.CopyToAddress, new { @class = "form-control", @required = true, @placeholder = "Address" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group ml-4 mt-1">
            <label class="control-label col-2" for="txtProjectName">Subject</label>
            <div class="col-9 float-left ">
                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control  maxw-100 float-left", @required = true, @placeholder = "Subject" })
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <label class="col-form-label col-2" for="Name">Letter No</label>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.LetterNo, new { @class = "form-control", @required = true, @placeholder = "Enter Letter No" })
                    </div>
                    <div class="col-3">
                        <label class="col-form-label col-10" for="">Date</label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.LetterDate, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <label class="col-form-label col-2" for="Name">Reference</label>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.Reference1, new { @class = "form-control", @required = true, @placeholder = "" })
                    </div>
                    <div class="col-3">
                        <label class="col-form-label col-10" for="">Date</label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.ReferenceDate1, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <label class="col-form-label col-2" for="Name">Reference</label>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.Reference2, new { @class = "form-control", @required = true, @placeholder = "" })
                    </div>
                    <div class="col-3">
                        <label class="col-form-label col-10" for="">Date</label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.ReferenceDate2, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-1">
            <div class="col-12">
                <div class="row form-group ">
                    <label class="col-form-label col-2" for="Name">Reference</label>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.Reference3, new { @class = "form-control", @required = true, @placeholder = "" })
                    </div>
                    <div class="col-3">
                        <label class="col-form-label col-10" for="">Date</label>
                    </div>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.ReferenceDate3, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group ml-4 mt-1">
            <label class="control-label col-2" for="">Keyywords</label>
            <div class="col-9 float-left ">
                @Html.TextBoxFor(model => model.Keywords, new { @class = "form-control  maxw-100 float-left", @required = true, @placeholder = "Keywords" })
            </div>
        </div>
        <div>
            <label class="col-form-label col-10 ml-4 font-weight-bold" for="">Received / sent details</label>
            <label class="col-form-label col-10 ml-4 font-weight-bold" for="">By Email</label>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Received Date</label>
                <div class="col-3 float-left">
                    @Html.TextBoxFor(model => model.ReceivedDate, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Email ID</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.EmailID1, new { @class = "form-control", @required = true, @placeholder = "Email ID" })
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Email ID</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.EmailID2, new { @class = "form-control", @required = true, @placeholder = "Email ID" })
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Email ID</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.EmailID3, new { @class = "form-control", @required = true, @placeholder = "Email ID" })
                </div>
            </div>
        </div>
        <div>
            <label class="col-form-label col-10 ml-4 font-weight-bold" for="">By Courier/Speed post/Registered post</label>
            <div class="row form-group ml-4 mt-4">
                <div class="col-12">
                    <div class="row form-group">
                        <label class="col-form-label col-2" for="">Type</label>
                        <div class="col-3">
                            @Html.DropDownListFor(model => model.ReceivedType, new SelectList(listType, "FilterCode", "FilterName", Model.ProjectCode), "Select Type", new { @class = "form-control", @required = true })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Received Date</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.ReceivedDate1, new { type = "date", @class = "form-control", @required = true, @placeholder = "Enter Date/Calendra" })
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="">Received By</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.ReceivedBy1, new { @class = "form-control", @required = true, @placeholder = "Name" })
                </div>
            </div>
        </div>
        <div>
            <label class="col-form-label col-10 ml-4 font-weight-bold" for="">By Hand</label>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="ReceivedThrough">Received Date</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.ReceivedDate2, new { type = "date", @class = "form-control", @required = true, @placeholder = "Received Date" })
                </div>
            </div>
            <div class="row form-group ml-4 mt-1">
                <label class="control-label col-2" for="">Received By</label>
                <div class="col-3 float-left ">
                    @Html.TextBoxFor(model => model.ReceivedBy2, new { @class = "form-control", @required = true, @placeholder = "Name" })
                </div>
            </div>
        </div>
        <div class="row ml-4 mt-4">
            <div class="col-12">
                <div class="row form-group">
                    <div class="col-2"></div>
                    <div class="col-3">
                        @Html.TextBoxFor(model => model.File, new { type = "file" })
                    </div>
                    <div class="col-3">
                        @if (Model.Id > 0)
                        {
                            <label class="col-form-label">@Model.FileName</label>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row ml-4">
            <div class="col-12">
                <div class="row form-group">
                    <div class="col-2">
                        <label class="col-form-label"></label>
                    </div>
                    <div class="col-3">
                        <input type="button" class="btn button" value="Back" id="" />
                    </div>

                    <div class="col-3">
                        <input type="submit" class="btn button" value="Save" id="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
<script src="~/Assets/Scripts/Correspondence.js"></script>








